---
permalink: /rss.xml
eleventyExcludeFromCollections: true
---
<?xml version="1.0" encoding="UTF-8"?>
<rss xmlns:dc="http://purl.org/dc/elements/1.1/" xmlns:content="http://purl.org/rss/1.0/modules/content/" xmlns:atom="http://www.w3.org/2005/Atom" version="2.0" xmlns:itunes="http://www.itunes.com/dtds/podcast-1.0.dtd" xmlns:podcast="https://podcastindex.org/namespace/1.0">
  <channel>
    <title><![CDATA[{{ site.title }}]]></title>
    <description><![CDATA[{{ site.author.bio | safe }}]]></description>
    <link>{{ site.url }}</link>
    <image>
      <url>https://assets.osmosiscast.com/static-assets/osmosis-logo-square.png</url>
      <title>{{ site.title }}</title>
      <link>{{ site.url }}</link>
    </image>
    <generator>Eleventy</generator>
    <lastBuildDate>{{ buildTime | rfc2822Date }}</lastBuildDate>
    <atom:link href="{{ site.url }}/rss.xml" rel="self" type="application/rss+xml"/>
    <copyright><![CDATA[{{ site.copyright | safe }}]]></copyright>
    <language><![CDATA[en-gb]]></language>
    <managingEditor>{{ site.author.contacts.email }} ({{ site.author.name }})</managingEditor>
    <webMaster>{{ site.author.contacts.email }} ({{ site.author.name }})</webMaster>
    <ttl>60</ttl>
    <category><![CDATA[Science]]></category>
    <category><![CDATA[Natural Sciences]]></category>
    <itunes:subtitle>{{ site.subtitle }}</itunes:subtitle>
    <itunes:author>{{ site.author.name }}</itunes:author>
    <itunes:summary>{{ site.author.bio }}</itunes:summary>
    <itunes:owner>
      <itunes:name>{{ site.author.name }}</itunes:name>
      <itunes:email>{{ site.author.contacts.email }}</itunes:email>
    </itunes:owner>
    <itunes:image href="https://assets.osmosiscast.com/static-assets/osmosis-logo-square.png"/>
    <itunes:category text="Science">
      <itunes:category text="Natural Sciences"/>
    </itunes:category>
    <itunes:explicit>false</itunes:explicit>
    <podcast:locked>yes</podcast:locked>
    <podcast:guid>a256ef66-55a0-54bc-aee8-1f9928bebd48</podcast:guid>
{%- for post in collections.posts %}
    <item>
      <title><![CDATA[{{ post.data.title | safe }}]]></title>
      <description><![CDATA[{{ post.data.description | striptags | safe }}]]></description>
      <link>{{ site.url }}{{ post.url }}</link>
      <guid isPermaLink="true">{{ post.data.url }}</guid>
{%- for tag in post.data.tags %}
      <category><![CDATA[{{ tag | safe }}]]></category>
{%- endfor %}
      <dc:creator><![CDATA[{{ site.author.name | safe }}]]></dc:creator>
      <pubDate>{{ post.data.date | rfc2822Date }}</pubDate>
      <enclosure url="https://op3.dev/e/{{ post.data.url }}" length="{{ post.data.size }}" type="audio/mpeg"/>
      <content:encoded><![CDATA[{{ post.templateContent | safe }}]]></content:encoded>
      <itunes:explicit>false</itunes:explicit>
      <itunes:episodeType>full</itunes:episodeType>
      <itunes:title>{{ post.data.title | striptags }}</itunes:title>
      <itunes:season>{{ post.data.season }}</itunes:season>
      <itunes:episode>{{ post.data.number }}</itunes:episode>
      <itunes:duration>{{ post.data.duration }}</itunes:duration>
      <itunes:summary>{{ post.data.description | striptags }}</itunes:summary>
      <itunes:author>{{ site.author.name }}</itunes:author>
      <itunes:image href="https://assets.osmosiscast.com/static-assets/osmosis-logo-square.png"/>
    </item>
{%- endfor %}
  </channel>
</rss>
