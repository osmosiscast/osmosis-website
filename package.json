{
  "name": "osmosis-website",
  "version": "1.12.30",
  "description": "Home of the Osmosis podcast",
  "keywords": [
    "osmosis",
    "podcast",
    "science",
    "jamie",
    "calum",
    "blog"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/osmosiscast/osmosis-website"
  },
  "license": "MIT",
  "author": "Osmosis Media <osmosiscast@gmail.com>",
  "type": "module",
  "scripts": {
    "build": "eleventy",
    "clean": "rm -rf _site",
    "format": "npm run format:scss && npm run format:njk",
    "format:njk": "poetry run djlint --extension=njk src/_includes/ --reformat",
    "format:scss": "stylelint \"src/**/*.scss\" --fix",
    "lint": "npm run lint:scss && npm run lint:njk",
    "lint:commit": "commitlint",
    "lint:njk": "poetry run djlint --extension=njk src/_includes/ --lint",
    "lint:scss": "stylelint \"src/**/*.scss\"",
    "lint:staged": "lint-staged",
    "prepare": "npx husky",
    "serve": "eleventy --serve",
    "start": "eleventy --serve"
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "lint-staged": {
    "*.njk": [
      "poetry run djlint --lint"
    ],
    "*.(sc|sa|c)ss": [
      "npm run format:scss"
    ],
    "*.py": [
      "poetry run ruff format",
      "poetry run bandit -r -s B404,B603,B605,B607",
      "poetry run mypy --no-explicit-package-bases"
    ]
  },
  "dependencies": {
    "@11ty/eleventy": "^3.0.0",
    "@11ty/eleventy-plugin-rss": "^2.0.0"
  },
  "devDependencies": {
    "@commitlint/cli": "^19.3.0",
    "@commitlint/config-conventional": "^19.2.2",
    "husky": "^9.1.7",
    "lint-staged": "^15.2.2",
    "prettier": "^3.2.5",
    "prettier-plugin-packagejson": "^2.5.0",
    "sass": "^1.75.0",
    "stylelint": "^15.11.0",
    "stylelint-config-recommended-scss": "^13.1.0",
    "stylelint-order": "^6.0.4",
    "stylelint-scss": "^5.3.2"
  },
  "engines": {
    "node": ">=18"
  }
}
