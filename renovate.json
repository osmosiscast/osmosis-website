{
  "extends": [
    "config:base",
    ":automergePatch",
    ":automergeBranch",
    ":automergeLinters",
    ":automergeTesters",
    ":automergeTypes"
  ],
  "packageRules": [
    {
      "packagePatterns": ["^stylelint"],
      "groupName": "stylelint"
    },
    {
      "groupName": "node",
      "matchPackageNames": ["node"],
      "enabled": false
    }
  ],
  "labels": ["renovate"],
  "prHourlyLimit": 4,
  "prConcurrentLimit": 16,
  "rangeStrategy": "bump",
  "semanticCommits": "enabled"
}
